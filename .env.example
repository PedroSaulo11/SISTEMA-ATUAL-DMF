# Conta Azul API Configuration
CONTA_AZUL_CLIENT_ID=your_conta_azul_client_id
CONTA_AZUL_CLIENT_SECRET=your_conta_azul_client_secret
CONTA_AZUL_TOKEN_URL=https://api.contaazul.com/oauth2/token
CONTA_AZUL_ACCESS_TOKEN=your_access_token
CONTA_AZUL_REFRESH_TOKEN=your_refresh_token
CONTA_AZUL_API_BASE_URL=https://api.contaazul.com
CONTA_AZUL_PAYMENTS_PATH=/v2/payments

# Cobli API Configuration
COBLI_API_BASE_URL=https://api.cobli.com.br/v2
COBLI_API_TOKEN=your_cobli_api_token
COBLI_AUTH_HEADER=Authorization
COBLI_AUTH_SCHEME=Bearer
COBLI_WEBHOOK_SECRET=your_webhook_secret
COBLI_WEBHOOK_SIGNATURE_HEADER=X-Cobli-Signature

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_change_in_production
# JWT_SECRET is required when NODE_ENV=production

# Server Configuration
PORT=3001
NODE_ENV=development
WEBHOOK_PORT=3002
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
EXTERNAL_API_TIMEOUT_MS=10000
CONTA_AZUL_TIMEOUT_MS=10000
COBLI_TIMEOUT_MS=10000
MONITOR_ENABLED=false
MONITOR_INTERVAL_MS=60000

# Database Configuration (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/dmf_db
PG_SSL=false

# Cache Configuration
REDIS_URL=
CACHE_TTL_SECONDS=60
CACHE_TTL_PAYMENTS=60
CACHE_TTL_COBLI_PAYMENTS=60
CACHE_TTL_COBLI_LOCATIONS=30

# Webhook Configuration
CONTA_AZUL_WEBHOOK_SECRET=
CONTA_AZUL_WEBHOOK_SIGNATURE_HEADER=X-ContaAzul-Signature

# Logging Configuration
LOG_LEVEL=info

# Signature Verification
SIGNATURE_SECRET=change_me_to_a_random_secret
